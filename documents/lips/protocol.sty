\newcommand{\generalmatter}[4]{
    #1 \linebreak \begin{scriptsize} #2 \end{scriptsize} & #3
    \ifthenelse{\isempty{#4}}
    {}
    {
        \paragraph{Conclusions}
        \itemize
            \renewcommand{\labelitemi}{\textit{to}}
            #4
        \enditemize
    }
    \\
}
\newcommand{\matter}[4]{
    \vspace{-1.5em}
    \flushleft
    \addtocounter{matterCounter}{1}
    \arabic{matterCounter}.
    \generalmatter{#1}{#2}{#3}{#4} \hline
}
\newcommand{\submatter}[4]{
    \vspace{-1.75em}
    \flushright
    \addtocounter{submatterCounter}{1}
    \alph{submatterCounter}.
    \generalmatter{#1}{#2}{#3}{#4} \cline{2-2}
}
\newcommand{\conclusion}[1]{\item #1}

